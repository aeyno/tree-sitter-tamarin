================================================================================
Rule with color (format: #00aaff)
================================================================================


theory RuleWithColor
begin

rule Test[color=#00aaff]:
    [ Fr(~a) ] --> [ Out(~a) ]

rule TestWAction[color=#00aaff]:
    [ Fr(~a) ] --[ Fact(~a) ]-> [ Out(~a) ]

end

